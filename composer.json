{
    "name": "navikt/snyk-api-client",
    "description": "Snyk API client",
    "homepage": "https://github.com/navikt/snyk-api-client-php",
    "readme": "README.md",
    "license": "MIT",
    "authors": [
        {
            "name": "Christer Edvartsen"
        }
    ],
    "support": {
        "issues": "https://github.com/navikt/snyk-api-client-php/issues",
        "source": "https://github.com/navikt/snyk-api-client-php"
    },
    "require": {
        "php": "^7.4",
        "guzzlehttp/guzzle": "^6.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.1",
        "phpstan/phpstan": "^0.12.25",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan-phpunit": "^0.12.11",
        "vimeo/psalm": "^3.11",
        "psalm/plugin-phpunit": "^0.10.1"
    },
    "autoload": {
        "psr-4": {
            "NAVIT\\Snyk\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NAVIT\\Snyk\\": "tests/"
        }
    },
    "scripts": {
        "lint": "for file in `git ls-files '*.php'`; do php -l $file; done",
        "test": "vendor/bin/phpunit",
        "test:coverage": "vendor/bin/phpunit --coverage-html build/coverage",
        "phpstan": "vendor/bin/phpstan analyse src tests -l max",
        "psalm": "vendor/bin/psalm",
        "sa": [
            "@phpstan"
        ],
        "ci": [
            "composer validate --strict",
            "@lint",
            "@sa",
            "@test"
        ]
    },
    "extra": {
        "phpstan": {
            "includes": [
                "extension.neon"
            ]
        }
    }
}
